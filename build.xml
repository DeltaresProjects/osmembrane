<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_zip" name="Build OSMembrane">
	
	<property name="version.properties.path" value="bin/de/osmembrane/resources/version.properties" />

	<import file="build-common.xml"/>
	
	<target name="init">
		<delete dir="build"/>
		<mkdir dir="build"/>
	</target>

    <!--this target was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar" depends="init, update_constants_revision">
        <jar destfile="build/OSMembrane.jar" manifest="MANIFEST.fatjar">
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="bin"/>
            <zipfileset dir="lib/runtime" includes="*.jar"/>
        </jar>
    </target>
	
	<target name="create_zip" depends="create_run_jar">
		<mkdir dir="build/resources/xml"/>
		<mkdir dir="build/resources/pdf"/>
		<copy file="../documents/manual/manual.pdf" tofile="build/resources/pdf/manual.pdf"/>
		<copy file="src/LICENSE.txt" tofile="build/LICENSE.txt"/>
		<zip destfile="build/OSMembrane_build${svn.info.lastRev}.zip" basedir="build"/>
	</target>
	
	<target name="clean" description="remove generated files">
		<delete file="${version.properties.path}" />
		<delete dir="build" />
	</target>
	
</project>
